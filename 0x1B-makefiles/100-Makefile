CC=gcc
SRC=holberton.c main.c
OBJ=$(SRC:.c=.o)
NAME=holberton
CFLAGS=-Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean re
%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

all: $(OBJ) m.h
	$(CC) $(OBJ) -o holberton

clean:
	$(RM) -f *~$(NAME)
oclean:
	$(RM) -f $(OBJ)
fclean: clean oclean
re: oclean all
